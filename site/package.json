{
  "name": "mundart-app",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bastikempken/mundart-app.git"
  },
  "author": "sebastian@kempken.io",
  "scripts": {
    "clean": "rimraf dist",
    "start": "npm run clean && npm-run-all --parallel compile:watch serve",
    "compile": "npm run clean && faucet",
    "compile:watch": "faucet --watch",
    "serve": "browser-sync start --serveStatic 'dist' --files 'dist' --cors -b 'google chrome' --no-notify --single --proxy 'localhost:9000'"
  },
  "devDependencies": {
    "browser-sync": "^2.26.14",
    "faucet-pipeline-nunjucks": "^0.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}